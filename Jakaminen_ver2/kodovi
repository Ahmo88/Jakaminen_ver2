<?php
// php -S 192.168.1.242:8095 u terminal bitno je da je -S veliko slovo

if(isset($_POST['imgPath'])){
   //path za php 
  $imgPath = $_POST['imgPath']; 

   // Check file exist or not 
   if( file_exists($imgPath) ){ 
      // Remove file 
      unlink($imgPath); 
   
    } 
   
}

//listaj filove u listBox
//$filePath="C:\Users\Pc\Documents\VSCOD\images";
$dirPath="/images";
$filenames="";


if (is_dir($dirPath))
{
  $files=opendir($dirPath);
  if($files)
  {
   while($filename = readdir($files) !=false )
    {
      if($filename!= "." && $filename!= "..")
      {

          $filenames=$filenames."<option>$filename</option>";
      }
    }
  }
}

?>




